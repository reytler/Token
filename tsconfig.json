{
  "compilerOptions": {
      "lib": ["es2017"],
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
          "@/*":["*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": [
      "src/**/*.ts"
  ]
}